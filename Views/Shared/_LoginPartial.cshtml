@using Microsoft.AspNetCore.Identity
@using TastyVault.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="float-end d-flex align-items-center" style="height: 50px">
  <ul class="nav">
    @if (SignInManager.IsSignedIn(User))
    {
      <li class="nav-item">
        <a id="manage" class="nav-link text-dark h-100" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
      </li>
      <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
          <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Đăng xuất</button>
        </form>
      </li>
    }
    else
    {
      <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
      </li>
    }
  </ul>
</div>
