@using Microsoft.AspNetCore.Identity
@using TastyVault.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="float-end d-flex align-items-center" style="height: 60px">
  @if (SignInManager.IsSignedIn(User))
  {
    <div class="dropdown" >
      <button class="btn btn-secondary avt-wrap rounded-circle float-end my-2 me-2" style="background: url('/img/avatardefault.jpg');background-size:cover;" data-bs-toggle="dropdown" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      </button>
      <div class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
        <a id="manage" class="nav-link text-dark h-100" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Trang cá nhân</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
          <button id="logout" type="submit" class="nav-link btn btn-link text-danger border-0">Đăng xuất</button>
        </form>
      </div>
    </div>
    @*<li class="nav-item">
  <a id="manage" class="nav-link text-dark h-100" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
  </li>
  <li class="nav-item">
  <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
  <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Đăng xuất</button>
  </form>
  </li>*@
  }
  else
  {
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
      </li>
    </ul>
  }
</div>
