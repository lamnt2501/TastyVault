<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - TastyVault</title>
  <script src="https://kit.fontawesome.com/d850c3fff6.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/TastyVault.styles.css" asp-append-version="true" /> 
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-2 border-end position-fixed top-0 start-0 z-1">

        <div class="logo-wrap">
          <img class="img-fluid" src="~/img/logo-vtc-academy-plus-color.png" />
        </div>

        <p class="m-0 mt-2"><strong>TRANG CHỦ</strong></p>
        <ul class="navbar-nav ms-2">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Mục lục món ăn</a>
          </li>
        </ul>

        <p class="m-0 mt-2"><strong>BÀI VIẾT</strong></p>
        <ul class="navbar-nav ms-2">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Tạo bài viết</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Bài viết của bạn</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Blog chia sẻ</a>
          </li>
        </ul>

        <p class="m-0 mt-2"><strong>THỰC ĐƠN</strong></p>
        <ul class="navbar-nav ms-2">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Thực đơn gợi ý</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Thực đơn của bạn</a>
          </li>
        </ul>
      </div>

      <div class="col-10 px-0 content-wrap">
        <header>
          <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">

              <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TastyVault</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                      aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                  <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                  </li>
                </ul>
              </div>

            </div>

          </nav>

        </header>

        <div class="container pt-3 main-content">
          <main role="main" class="pb-3">
            @RenderBody()
          </main>
        </div>
      </div>
    </div>
  </div>


       

  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />

  <footer class="border-top footer text-muted">
    <div class="container text-center">
      &copy; @DateTime.Now - TastyVault - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
