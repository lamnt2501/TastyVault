@model TastyVault.Views.Shared._HotBlogModel
@{

}
<div class="container-fluid p-0">
  <div class="row">
    <div class="col-7 p-0 hot-blog-img bg-img" style="background-image:url('@Model.ImagePath')">
    </div>
    <div class="col-5 px-0 slider">
      <div class="pt-5 pb-3 px-3 slider">
        <h1 class="pe-5">@Model.Title</h1>
        <hr />
        <p class="pe-5">@Model.Description</p>
        <a class="btn btn-dark mt-5 mb-5">
          Xem chi tiết
          <i class="fa-solid fa-arrow-right"></i>
        </a>
      </div>
    </div>
  </div>
</div>
