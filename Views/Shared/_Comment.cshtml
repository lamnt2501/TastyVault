@model string[]

@{
  ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="PostComments" method="post">
  <div  asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" value="@Model[0]" name="UserId" />
  <input type="hidden" value="@Model[1]" name="PostId" />
  <div  class="form-group">
    <label class="control-label"></label>
    <textarea rows="1" name="content" class="form-control"></textarea>
  </div>
  <div class="form-group mt-2">
    <input type="submit" value="Gửi" class="btn btn-primary" />
  </div>
</form>


@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
